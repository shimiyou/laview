.post-show-contents
  .post-show-contents__content
    %h1.post-show-contents__content__title
      = @post.title
    .post-show-contents__content__contain
      .post-show-contents__content__contain__left
        %a{"data-lightbox": "image", href: @post.image.url}
          = image_tag @post.image.url, size: '430x280', class:'post-show-contents__content__contain__left__image'
        .post-show-contents__content__contain__left__image_date
          = @post.image_date
      .post-show-contents__content__contain__right
        %p.post-show-contents__content__contain__right__text
          = safe_join(@post.text.split("\n"),tag(:br))
    = link_to '戻る', album_path(@post.album_id), class: 'return-btn'
    = link_to '編集', edit_album_post_path(@post.album_id, @post.id), class: 'edit-btn'
    = link_to '削除', album_post_path(@post.album_id, @post.id), method: :delete, class: 'delete-btn', data: {confirm: '削除しますか？'}
